# BitLogic Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# BITCOIN CONFIGURATION
# ===========================================

# Network: mainnet or testnet
BITCOIN_NETWORK=testnet

# Bitcoin RPC connection
BITCOIN_RPC_URL=http://localhost:18332
BITCOIN_RPC_USER=your_rpc_user
BITCOIN_RPC_PASS=your_rpc_password

# ===========================================
# ETHEREUM CONFIGURATION
# ===========================================

# Ethereum RPC (Sepolia testnet recommended for testing)
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Private key for signing transactions (DO NOT COMMIT!)
ETHEREUM_PRIVATE_KEY=your_private_key_here

# Deployed contract addresses
TRIGGER_CONTRACT_ADDRESS=0x...
NFT_CONTRACT_ADDRESS=0x...

# ===========================================
# GRAIL PRO (ZK) CONFIGURATION
# ===========================================

# Grail Pro API credentials
GRAIL_PRO_API_KEY=your_api_key
GRAIL_PRO_ENDPOINT=https://api.grailpro.io

# ===========================================
# CHARMS SDK CONFIGURATION
# ===========================================

# Charms network
CHARMS_NETWORK=testnet
CHARMS_API_KEY=your_charms_api_key

# ===========================================
# RELAYER CONFIGURATION
# ===========================================

# Cross-chain relayer settings
RELAYER_PRIVATE_KEY=your_relayer_private_key
RELAYER_POLL_INTERVAL=10000

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_BITCOIN_EXPLORER=https://mempool.space/testnet

# Wallet Connect
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_id
